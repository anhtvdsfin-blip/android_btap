<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.MainActivity"
    android:background="#F5F5F5">




    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:title="Calculator"
        android:titleTextColor="@android:color/white" />

    <!-- Màn hình hiển thị -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#888888"
        android:gravity="end"
        android:padding="8dp" />

    <!-- Dòng hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#000000"
        android:gravity="end"
        android:padding="8dp" />

    <!-- Bàn phím -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="4dp">

        <!-- Hàng 1 -->
        <Button
            android:text="CE"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:textSize="22sp" />

        <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:textSize="22sp" />

        <Button
            android:text="BS"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:textSize="22sp" />

        <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:textSize="22sp" />

        <!-- Hàng 2 -->
        <Button android:text="7" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="8" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="9" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="x" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />

        <!-- Hàng 3 -->
        <Button android:text="4" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="5" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="6" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="-" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />

        <!-- Hàng 4 -->
        <Button android:text="1" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="2" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="3" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="+" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />

        <!-- Hàng 5 -->
        <Button android:text="+/-" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="0" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="." android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
        <Button android:text="=" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:textSize="22sp" />
    </GridLayout>

</LinearLayout>
